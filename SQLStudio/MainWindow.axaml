<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:SQLStudio.ViewModels"
        xmlns:conv="using:SQLStudio.Converters"
        mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
        x:Class="SQLStudio.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="SQL Studio"
        Width="1400" Height="900"
        Background="#0d1117"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <conv:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <conv:BoolToStringConverter x:Key="BoolToStringConverter"/>
    </Window.Resources>
    
    <Window.Styles>
        <!-- Global Dark Theme Styles -->
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#e6edf3"/>
        </Style>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#161b22"/>
            <Setter Property="BorderBrush" Value="#30363d"/>
            <Setter Property="Foreground" Value="#e6edf3"/>
            <Setter Property="CaretBrush" Value="#e6edf3"/>
            <Setter Property="SelectionBrush" Value="#264f78"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>
        <Style Selector="TextBox:pointerover">
            <Setter Property="Foreground" Value="#e6edf3"/>
        </Style>
        <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="#1c2128"/>
            <Setter Property="BorderBrush" Value="#58a6ff"/>
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="Foreground" Value="#e6edf3"/>
        </Style>
        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="#1c2128"/>
            <Setter Property="BorderBrush" Value="#58a6ff"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#161b22"/>
            <Setter Property="BorderBrush" Value="#30363d"/>
            <Setter Property="Foreground" Value="#e6edf3"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
        <Style Selector="ComboBox:pointerover /template/ Border#Background">
            <Setter Property="Background" Value="#1c2128"/>
        </Style>
        <Style Selector="ComboBox:pressed /template/ Border#Background">
            <Setter Property="Background" Value="#1c2128"/>
        </Style>
        <Style Selector="ComboBox /template/ Popup Border">
            <Setter Property="Background" Value="#161b22"/>
            <Setter Property="BorderBrush" Value="#30363d"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        <Style Selector="ComboBox /template/ Popup Border ScrollViewer">
            <Setter Property="Background" Value="#161b22"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="ComboBox /template/ Popup Border ScrollViewer ScrollContentPresenter">
            <Setter Property="Background" Value="#161b22"/>
        </Style>
        <Style Selector="ComboBoxItem">
            <Setter Property="Foreground" Value="#e6edf3"/>
            <Setter Property="Background" Value="#161b22"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
        <Style Selector="ComboBoxItem:pointerover">
            <Setter Property="Background" Value="#30363d"/>
            <Setter Property="Foreground" Value="#e6edf3"/>
        </Style>
        <Style Selector="ComboBoxItem:selected">
            <Setter Property="Background" Value="#1f6feb"/>
            <Setter Property="Foreground" Value="#ffffff"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="#21262d"/>
            <Setter Property="BorderBrush" Value="#30363d"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#30363d"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#1a1e24"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#238636"/>
            <Setter Property="BorderBrush" Value="#238636"/>
        </Style>
        <Style Selector="Button.primary:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#2ea043"/>
            <Setter Property="BorderBrush" Value="#2ea043"/>
        </Style>
        <Style Selector="Button.primary:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#1e6e2f"/>
            <Setter Property="BorderBrush" Value="#1e6e2f"/>
        </Style>
        <Style Selector="Button.accent">
            <Setter Property="Background" Value="#1f6feb"/>
            <Setter Property="BorderBrush" Value="#1f6feb"/>
        </Style>
        <Style Selector="Button.accent:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#388bfd"/>
        </Style>
        <Style Selector="Button.accent:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#1a5fc7"/>
        </Style>
        <Style Selector="Button.danger">
            <Setter Property="Background" Value="#da3633"/>
            <Setter Property="BorderBrush" Value="#da3633"/>
        </Style>
        <Style Selector="Button.danger:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#f85149"/>
        </Style>
        <Style Selector="Button.danger:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#b62324"/>
        </Style>
        <Style Selector="Button.nav">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>
        <Style Selector="Button.nav:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#21262d"/>
        </Style>
        <Style Selector="Button.nav:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#161b22"/>
        </Style>
        <Style Selector="Button.navActive">
            <Setter Property="Background" Value="#1f6feb"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>
        <Style Selector="ListBox">
            <Setter Property="Background" Value="#161b22"/>
            <Setter Property="BorderBrush" Value="#30363d"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        <Style Selector="ListBoxItem">
            <Setter Property="Foreground" Value="#e6edf3"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#1f6feb"/>
        </Style>
        <Style Selector="NumericUpDown">
            <Setter Property="Background" Value="#161b22"/>
            <Setter Property="BorderBrush" Value="#30363d"/>
            <Setter Property="Foreground" Value="#e6edf3"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        <Style Selector="DataGrid">
            <Setter Property="Background" Value="#161b22"/>
            <Setter Property="BorderBrush" Value="#30363d"/>
            <Setter Property="RowBackground" Value="#161b22"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#21262d"/>
        </Style>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#21262d"/>
            <Setter Property="Foreground" Value="#8b949e"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="DataGridCell">
            <Setter Property="Foreground" Value="#e6edf3"/>
        </Style>
        <Style Selector="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ScrollBar /template/ Thumb">
            <Setter Property="Background" Value="#30363d"/>
        </Style>
    </Window.Styles>
    
    <Design.DataContext>
        <vm:MainViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Background="#161b22" BorderBrush="#30363d" BorderThickness="0,0,0,1" Padding="24,16">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <Border Background="#1f6feb" CornerRadius="8" Width="40" Height="40">
                        <TextBlock Text="âš¡" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="SQL Studio" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="AI-Powered Query Builder" FontSize="11" Foreground="#8b949e"/>
                    </StackPanel>
                </StackPanel>

                <!-- Step Navigation -->
                <Border Grid.Column="1" HorizontalAlignment="Center" Background="#21262d" CornerRadius="8" Padding="4">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <!-- Step 1 -->
                        <Button Command="{Binding GoToStepCommand}" CommandParameter="{x:Static vm:WorkflowStep.DatabaseConnection}"
                                Classes.nav="{Binding !IsStep1}" Classes.navActive="{Binding IsStep1}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Border Width="24" Height="24" CornerRadius="12" 
                                        Background="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#238636;#30363d'}">
                                    <TextBlock Text="1" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Database" VerticalAlignment="Center" FontSize="13"/>
                            </StackPanel>
                        </Button>
                        <TextBlock Text="â†’" Foreground="#484f58" VerticalAlignment="Center" Margin="8,0"/>
                        <!-- Step 2 -->
                        <Button Command="{Binding GoToStepCommand}" CommandParameter="{x:Static vm:WorkflowStep.AiConfiguration}"
                                Classes.nav="{Binding !IsStep2}" Classes.navActive="{Binding IsStep2}"
                                IsEnabled="{Binding CanGoToStep2}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Border Width="24" Height="24" CornerRadius="12"
                                        Background="{Binding SelectedAiModel, Converter={x:Static conv:AiModelStepColorConverter.Instance}}">
                                    <TextBlock Text="2" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="AI Setup" VerticalAlignment="Center" FontSize="13"/>
                            </StackPanel>
                        </Button>
                        <TextBlock Text="â†’" Foreground="#484f58" VerticalAlignment="Center" Margin="8,0"/>
                        <!-- Step 3 -->
                        <Button Command="{Binding GoToStepCommand}" CommandParameter="{x:Static vm:WorkflowStep.SqlWorkspace}"
                                Classes.nav="{Binding !IsStep3}" Classes.navActive="{Binding IsStep3}"
                                IsEnabled="{Binding CanGoToStep3}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Border Width="24" Height="24" CornerRadius="12" Background="#30363d">
                                    <TextBlock Text="3" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="SQL Workspace" VerticalAlignment="Center" FontSize="13"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Status & Knowledge Management -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                    <Button Content="ðŸ“š åœºæ™¯çŸ¥è¯†" Command="{Binding ShowKnowledgeManagementCommand}" 
                            Padding="12,8" FontSize="12" Classes="nav"/>
                    <Border Width="8" Height="8" CornerRadius="4"
                            Background="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#3fb950;#f85149'}"/>
                    <TextBlock Text="{Binding IsConnected, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Connected;Disconnected'}" 
                               FontSize="12" Foreground="#8b949e" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content - Step Panels -->
        <Grid Grid.Row="1">
            <!-- Step 1: Database Connection -->
            <Border IsVisible="{Binding IsStep1}" Padding="24,20">
                <Grid RowDefinitions="Auto,*">
                    <!-- Compact Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12" Margin="0,0,0,20">
                        <Border Background="#1f6feb" CornerRadius="8" Width="40" Height="40">
                            <TextBlock Text="ðŸ—„ï¸" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Connect to Database" FontSize="18" FontWeight="Bold"/>
                            <TextBlock Text="Configure your database connection to get started" FontSize="12" Foreground="#8b949e"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Horizontal Card Layout -->
                    <Grid Grid.Row="1" ColumnDefinitions="*,20,*">
                        <!-- Connection Settings Card -->
                        <Border Grid.Column="0" Background="#161b22" CornerRadius="12" Padding="24">
                            <StackPanel Spacing="16">
                                <TextBlock Text="Connection Settings" FontWeight="SemiBold" FontSize="14"/>
                                
                                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto">
                                    <!-- Row 1: Type & Host -->
                                    <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4" Margin="0,0,8,12">
                                        <TextBlock Text="Type" FontSize="12" Foreground="#8b949e"/>
                                        <ComboBox ItemsSource="{Binding DatabaseTypes}" 
                                                  SelectedItem="{Binding SelectedDatabaseType}" 
                                                  HorizontalAlignment="Stretch"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4" Margin="8,0,0,12">
                                        <TextBlock Text="Host" FontSize="12" Foreground="#8b949e"/>
                                        <TextBox Watermark="localhost" Text="{Binding Host}"/>
                                    </StackPanel>
                                    
                                    <!-- Row 2: Port & Username -->
                                    <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4" Margin="0,0,8,12">
                                        <TextBlock Text="Port" FontSize="12" Foreground="#8b949e"/>
                                        <TextBox Watermark="3306" Text="{Binding Port}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4" Margin="8,0,0,12">
                                        <TextBlock Text="Username" FontSize="12" Foreground="#8b949e"/>
                                        <TextBox Watermark="root" Text="{Binding Username}"/>
                                    </StackPanel>
                                    
                                    <!-- Row 3: Password & Connect Button -->
                                    <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4" Margin="0,0,8,0">
                                        <TextBlock Text="Password" FontSize="12" Foreground="#8b949e"/>
                                        <TextBox Watermark="â€¢â€¢â€¢â€¢â€¢â€¢" Text="{Binding Password}" PasswordChar="â—"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="2" Grid.Column="1" Spacing="4" Margin="8,0,0,0">
                                        <TextBlock Text=" " FontSize="12"/>
                                        <Button Content="Connect" Command="{Binding ConnectCommand}" 
                                                Classes="primary" HorizontalAlignment="Stretch" Padding="16,11"
                                                IsVisible="{Binding !IsConnected}" IsEnabled="{Binding !IsExecuting}"/>
                                        <Button Content="Disconnect" Command="{Binding DisconnectCommand}" 
                                                Classes="danger" HorizontalAlignment="Stretch" Padding="16,11"
                                                IsVisible="{Binding IsConnected}" IsEnabled="{Binding !IsExecuting}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Database Selection & Next Card -->
                        <Border Grid.Column="2" Background="#161b22" CornerRadius="12" Padding="24">
                            <Grid RowDefinitions="Auto,*,Auto">
                                <TextBlock Grid.Row="0" Text="Select Database" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,16"/>
                                
                                <!-- Status & Database List -->
                                <StackPanel Grid.Row="1" Spacing="12">
                                    <!-- Connection Status -->
                                    <Border Background="#21262d" CornerRadius="8" Padding="12">
                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                            <Border Width="10" Height="10" CornerRadius="5"
                                                    Background="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#3fb950;#f85149'}"/>
                                            <TextBlock Text="{Binding IsConnected, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Connected - Select a database;Not connected - Connect first'}" 
                                                       FontSize="13" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Database Selection -->
                                    <StackPanel Spacing="4" IsEnabled="{Binding IsConnected}">
                                        <TextBlock Text="Database" FontSize="12" Foreground="#8b949e"/>
                                        <ComboBox ItemsSource="{Binding Databases}" 
                                                  SelectedItem="{Binding SelectedDatabase}" 
                                                  HorizontalAlignment="Stretch"/>
                                    </StackPanel>

                                    <!-- Tables Preview -->
                                    <StackPanel Spacing="4" IsEnabled="{Binding IsConnected}">
                                        <TextBlock Text="Tables" FontSize="12" Foreground="#8b949e"/>
                                        <ListBox ItemsSource="{Binding Tables}" 
                                                 SelectedItem="{Binding SelectedTable}"
                                                 MaxHeight="200" CornerRadius="6"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <!-- Next Button -->
                                <Button Grid.Row="2" Content="Next: Configure AI â†’" Command="{Binding NextStepCommand}" 
                                        Classes="accent" HorizontalAlignment="Stretch" Padding="16,12" Margin="0,16,0,0"
                                        IsEnabled="{Binding SelectedDatabase, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Step 2: AI Configuration -->
            <Border IsVisible="{Binding IsStep2}" Padding="24,20">
                <Grid RowDefinitions="Auto,*">
                    <!-- Compact Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12" Margin="0,0,0,20">
                        <Border Background="#238636" CornerRadius="8" Width="40" Height="40">
                            <TextBlock Text="ðŸ¤–" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Configure AI Model" FontSize="18" FontWeight="Bold"/>
                            <TextBlock Text="Set up your OpenAI compatible endpoint" FontSize="12" Foreground="#8b949e"/>
                        </StackPanel>
                        <Button Content="â† Back" Command="{Binding PreviousStepCommand}" Padding="12,8" Margin="40,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Horizontal Card Layout -->
                    <Grid Grid.Row="1" ColumnDefinitions="*,20,*">
                        <!-- API Settings Card -->
                        <Border Grid.Column="0" Background="#161b22" CornerRadius="12" Padding="24">
                            <StackPanel Spacing="16">
                                <TextBlock Text="API Settings" FontWeight="SemiBold" FontSize="14"/>
                                
                                <StackPanel Spacing="4">
                                    <TextBlock Text="API Base URL" FontSize="12" Foreground="#8b949e"/>
                                    <TextBox Watermark="https://api.openai.com/v1" Text="{Binding AiEndpoint}"/>
                                </StackPanel>

                                <StackPanel Spacing="4">
                                    <TextBlock Text="API Key" FontSize="12" Foreground="#8b949e"/>
                                    <TextBox Watermark="sk-..." Text="{Binding AiApiKey}" PasswordChar="â—"/>
                                </StackPanel>

                                <Grid ColumnDefinitions="*,Auto">
                                    <StackPanel Grid.Column="0" Spacing="4" Margin="0,0,12,0">
                                        <TextBlock Text="Model" FontSize="12" Foreground="#8b949e"/>
                                        <ComboBox ItemsSource="{Binding AiModels}" 
                                                  SelectedItem="{Binding SelectedAiModel}" 
                                                  HorizontalAlignment="Stretch"
                                                  IsEnabled="{Binding AiModels.Count}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Spacing="4">
                                        <TextBlock Text=" " FontSize="12"/>
                                        <Button Content="Load" Command="{Binding FetchModelsCommand}" 
                                                IsEnabled="{Binding !IsLoadingModels}" Padding="16,11"/>
                                    </StackPanel>
                                </Grid>

                                <StackPanel Spacing="4">
                                    <TextBlock Text="Max Retries" FontSize="12" Foreground="#8b949e"/>
                                    <NumericUpDown Value="{Binding MaxRetries}" Minimum="1" Maximum="10" 
                                                   FormatString="0" ShowButtonSpinner="True" Width="120" HorizontalAlignment="Left"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Connection Summary Card -->
                        <Border Grid.Column="2" Background="#161b22" CornerRadius="12" Padding="24">
                            <Grid RowDefinitions="Auto,*,Auto">
                                <TextBlock Grid.Row="0" Text="Connection Summary" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,16"/>
                                
                                <!-- Status Info -->
                                <StackPanel Grid.Row="1" Spacing="12">
                                    <!-- Database Info -->
                                    <Border Background="#21262d" CornerRadius="8" Padding="16">
                                        <StackPanel Spacing="12">
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <Border Width="10" Height="10" CornerRadius="5" Background="#3fb950"/>
                                                <TextBlock Text="Database Connected" FontSize="13" Foreground="#3fb950"/>
                                            </StackPanel>
                                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto">
                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Type:" FontSize="12" Foreground="#8b949e" Margin="0,0,12,4"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedDatabaseType}" FontSize="12"/>
                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Host:" FontSize="12" Foreground="#8b949e" Margin="0,0,12,4"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Host}" FontSize="12"/>
                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Database:" FontSize="12" Foreground="#8b949e" Margin="0,0,12,0"/>
                                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedDatabase}" FontSize="12"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>

                                    <!-- AI Model Info -->
                                    <Border Background="#21262d" CornerRadius="8" Padding="16">
                                        <StackPanel Spacing="12">
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <Border Width="10" Height="10" CornerRadius="5"
                                                        Background="{Binding SelectedAiModel, Converter={x:Static conv:AiModelStatusColorConverter.Instance}}"/>
                                                <TextBlock Text="{Binding SelectedAiModel, TargetNullValue='No model selected', FallbackValue='No model selected'}" 
                                                           FontSize="13"/>
                                            </StackPanel>
                                            <TextBlock Text="Click 'Load' to fetch available models from your API endpoint" 
                                                       FontSize="11" Foreground="#8b949e" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Tables Count -->
                                    <Border Background="#21262d" CornerRadius="8" Padding="16">
                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                            <TextBlock Text="ðŸ“‹" FontSize="14"/>
                                            <TextBlock FontSize="13">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} tables available">
                                                        <Binding Path="Tables.Count"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Start Working Button -->
                                <Button Grid.Row="2" Content="âœ“ Start Working" Command="{Binding NextStepCommand}" 
                                        Classes="primary" HorizontalAlignment="Stretch" Padding="16,14" Margin="0,16,0,0"
                                        IsEnabled="{Binding SelectedAiModel, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Step 3: SQL Workspace -->
            <Grid IsVisible="{Binding IsStep3}" ColumnDefinitions="260,*">
                <!-- Left Sidebar - Tables -->
                <Border Grid.Column="0" Background="#161b22" BorderBrush="#30363d" BorderThickness="0,0,1,0">
                    <Grid RowDefinitions="Auto,*">
                        <Border Grid.Row="0" Padding="16" Background="#21262d">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock Text="ðŸ“‹" FontSize="16"/>
                                    <TextBlock Text="Tables" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding SelectedDatabase}" FontSize="12" Foreground="#8b949e" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </StackPanel>
                                <TextBlock Text="åŒå‡»å¯æŸ¥çœ‹è¡¨ç»“æž„" FontSize="11" Foreground="#6e7681" Margin="26,2,0,0"/>
                            </StackPanel>
                        </Border>
                        <ListBox Grid.Row="1" ItemsSource="{Binding Tables}" 
                                 SelectedItem="{Binding SelectedTable}"
                                 Margin="12" CornerRadius="8"
                                 x:Name="TablesListBox"
                                 DoubleTapped="OnTablesListBoxDoubleTapped"/>
                    </Grid>
                </Border>

                <!-- Main Content Area -->
                <Grid Grid.Column="1" ColumnDefinitions="*,6,*" Margin="20">
                    <!-- Left: Chat & SQL Editor -->
                    <Grid Grid.Column="0" RowDefinitions="*,Auto">
                        <!-- Chat Area -->
                        <Border Grid.Row="0" Background="#161b22" CornerRadius="12" ClipToBounds="True">
                            <Grid RowDefinitions="Auto,*,Auto">
                                <!-- Chat Header -->
                                <Border Grid.Row="0" Background="#21262d" Padding="16,12">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                                            <TextBlock Text="ðŸ’¬" FontSize="16"/>
                                            <TextBlock Text="AI Chat" FontWeight="SemiBold" FontSize="15" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                                            <TextBlock Text="History:" VerticalAlignment="Center" FontSize="12" Foreground="#8b949e"/>
                                            <ComboBox ItemsSource="{Binding HistoryModes}" 
